<!-- These defaults will be overridden by any more specific targets -->
<settings target="*">

  <!-- mapping for facets (not normally overridden ) -->
  <set name="pz:limitmap:subject" value="local:subject"/>
  <set name="pz:limitmap:author" value="local:author"/>
  <set name="pz:limitmap:medium" value="local:medium"/>
  <set name="pz:limitmap:server" value="local:server"/>

  <!-- This file introduces default settings for pazpar2 -->

  <!-- mapping for unqualified search -->
  <set name="pz:cclmap:term" value="u=1016 t=l,r s=al"/>

  <!-- field-specific mappings -->
  <set name="pz:cclmap:ti" value="u=4 s=al"/>
  <set name="pz:cclmap:au" value="u=1003 s=al"/>
  <set name="pz:cclmap:su" value="u=21 s=al"/>
  <set name="pz:cclmap:isbn" value="u=7"/>
  <set name="pz:cclmap:issn" value="u=8"/>
  <set name="pz:cclmap:date" value="u=30 r=r"/>

  <!-- Retrieval settings -->

  <set name="pz:requestsyntax" value="marc21"/>
  <!-- <set name="pz:elements" value="F"/> NOT YET IMPLEMENTED -->

  <!-- Result normalization settings -->

  <set name="pz:nativesyntax" value="iso2709"/>
  <set name="pz:xslt" value="marc21.xsl"/>

</settings>
